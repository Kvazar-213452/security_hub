func readHashes(filePath string) ([]string, error) {
	file, err := os.Open(filePath)
	if err != nil {
		return nil, err
	}
	defer file.Close()

	var hashes []string
	var hash string

	for {
		_, err := fmt.Fscanf(file, "%s\n", &hash)
		if err != nil {
			break
		}
		hashes = append(hashes, strings.TrimSpace(hash))
	}

	return hashes, nil
}